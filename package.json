{
  "main": "main.js",
  "name": "vcia-ssm",
  "version": "1.0.0",
  "description": "VCIA Student Spreadsheet Manager",
  "author": "Albert Wesley <albert.wesley.dion@gmail.com>",
  "homepage": "https://github.com/LoggingNewMemory/VCIAStudentGoogleSheet",
  "devDependencies": {
    "electron": "^35.6.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "googleapis": "^134.0.0"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux",
    "dist:win": "electron-builder --windows",
    "dist:all": "electron-builder --linux --windows"
  },
  "build": {
    "appId": "com.albertwesley.vcia.ssm",
    "productName": "Victory SSM",
    "asar": true,
    "files": [
      "main.js",
      "preload.js", 
      "renderer.js",
      "index.html",
      "assets/**/*",
      "logo/*"
    ],
    "extraResources": [
      {
        "from": "client_secret.json",
        "to": "client_secret.json"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "category": "Education",
      "icon": "logo/linux.png"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "logo/windows.ico"
    }
  }
}